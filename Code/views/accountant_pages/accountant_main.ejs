<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Main Page</title>
        <!-- fontawesome for icons -->
        <script src="https://kit.fontawesome.com/d2c306d566.js" crossorigin="anonymous"></script>
        <!--ajax-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <!--CSS-->
        <link rel="stylesheet" href="general_css.css">
        <link rel="stylesheet" href="accountant_main_css.css">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%- include('../partials/header'); %>
    </head>
    <body>
        <h1>Accountant main page</h1>
        <h2>Welcome <%= user.firstName %> <%= user.lastName %></h2>
        <div>
            <h2>Pending Requests</h2>
            <div id="pending_requests_div" >
                <table id="pending_requests_table" class="requests_record_table">
                    <tr> <!-- This is a table row -->
                        <th>Type</th> <!-- Table header cell -->
                        <th>Title</th>
                        <th>RegistrationDate</th>
                        <th> </th>
                    </tr>
                </table>
            </div>
        </div>
        <div>
            <h2>Executed Requests</h2>
            <div id="executed_requests_div" >
                <table id="executed_requests_table" class="requests_record_table">
                    <tr> <!-- This is a table row -->
                        <th>Type</th> <!-- Table header cell -->
                        <th>Title</th>
                        <th>RegistrationDate</th>
                        <th> </th>
                    </tr>
                </table>
            </div>
        </div>
        <div>
            <h2>Rejected Requests</h2>
            <div id="rejected_requests_div" >
                <table id="rejected_requests_table" class="requests_record_table">
                    <tr> <!-- This is a table row -->
                        <th>Type</th> <!-- Table header cell -->
                        <th>Title</th>
                        <th>RegistrationDate</th>
                        <th> </th>
                    </tr>
                </table>
            </div>
        </div>
        <div id="pages-div" name="pages-div">
            <a href="working">working page</a>
            <a href="clients">client list</a>
            <a href="assignment-history">assignment history</a>
        </div>
    </body>
    <%- include('../partials/footer'); %>
    <script>
        const timestamp_options = {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit'
        };

        var requests;
        try {
            requests = JSON.parse(`<%- JSON.stringify(requests) %>`);
        } catch (error) {
            console.error("Error parsing JSON:", error);
        }

        var clients;
        try {
            clients = JSON.parse(`<%- JSON.stringify(clients) %>`);
        } catch (error) {
            console.error("Error parsing JSON:", error);
        }

        //const requests_div = $("#pending_requests_div");
        
        var request_sender_div = "";
        const pending_requests_table = $("#pending_requests_table");
        const executed_requests_table = $("#executed_requests_table");
        const rejected_requests_table = $("#rejected_requests_table");

        var pending_count = 0;
        var executed_count = 0;
        var rejected_count = 0;

        requests.forEach(request => {
            const row = $("<tr>");
            if(request.status == "pending"){
                row.css("background-color", "lime");
            }
            
            const cell_type = $("<td>").text(request.type);
            const cell_title = $("<td>").text(request.title);
            const date = new Date(request.registrationDate);
            const cell_reg_date = $("<td>").text(date.toLocaleString('en-US', timestamp_options));
            const cell_actions = $("<td>");
            const btn_view = $("<button>").text("View").click(function() {
                window.location.href = '/view-request?req_id='+request._id;
            });
            
            row.append(cell_type);
            row.append(cell_title);
            row.append(cell_reg_date);
            row.append(cell_actions);
            cell_actions.append(btn_view);
            if(request.status == "pending" || request.status == "viewed"){
                pending_requests_table.append(row);
                pending_count = pending_count +1;
            }
            else if(request.status == "executed"){
                executed_requests_table.append(row);
                executed_count = executed_count +1;
            }
            else if(request.status == "rejected"){
                rejected_requests_table.append(row);
                rejected_count = rejected_count +1;
            }
        });
        if(pending_count == 0){
            $("#pending_requests_div").append($("<p>").text("You have no pending requests at the moment"));
            pending_requests_table.hide();
        }
        if(executed_count == 0){
            $("#executed_requests_div").append($("<p>").text("You have no executed requests at the moment"));
            executed_requests_table.hide()
        }
        if(rejected_count == 0){
            $("#rejected_requests_div").append($("<p>").text("You have no rejected requests at the moment"));
            rejected_requests_table.hide()
        }
        
    </script>

</html>