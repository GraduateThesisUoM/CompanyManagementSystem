<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Main Page</title>
        <!-- fontawesome for icons -->
        <script src="https://kit.fontawesome.com/d2c306d566.js" crossorigin="anonymous"></script>
        <!--ajax-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <!--CSS-->
        <link rel="stylesheet" href="general_css.css">
        <link rel="stylesheet" href="accountant_main_css.css">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%- include('../partials/header'); %>
    </head>
    <body>
        <h1>Accountant main page</h1>
        <h2>Welcome <%= user.firstName %> <%= user.lastName %></h2>
        <div>
            <h2>My Requests</h2>
            <div id="requests_div"></div>
            <form id="requests_answer_div">
                <textarea></textarea>
                <input id="request_form_input" type="text">
                <button id="request_form_submit_btn" type="submit">submit</button>
            </form>
        </div>
        <div id="pages-div" name="pages-div">
            <a href="working">working page</a>
            <a href="clients">client list</a>
            <a href="assignment-history">assignment history</a>
        </div>
        <form action="/logout?_method=DELETE" method="POST">
            <button type="submit">Log Out</button>
        </form>
    </body>
    <%- include('../partials/footer'); %>
    <script>
        const timestamp_options = {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit'
        };

        var requests;
        try {
            requests = JSON.parse(`<%- JSON.stringify(requests) %>`);
        } catch (error) {
            console.error("Error parsing JSON:", error);
        }

        var clients;
        try {
            clients = JSON.parse(`<%- JSON.stringify(clients) %>`);
        } catch (error) {
            console.error("Error parsing JSON:", error);
        }

        const requests_answer_div = $("#requests_answer_div");
        requests_answer_div.hide();
        const requests_div = $("#requests_div");
        
        var request_sender_div = "";

        requests.forEach(request => {
            const request_div = $("<div>").addClass('request_div');
            clients.forEach(client => {
                if(client._id == request.sender_id){
                    request_sender_div = $("<div>").text("Name : " + client.firstName + " " + client.lastName );
                }
            })
            const request_type_div = $("<div>").text("Type : " + request.type);
            const request_title_div = $("<div>").text("Title : " + request.title);
            const date = new Date(request.registrationDate);
            const request_registrationDate_div = $("<div>").text("RegistrationDate : " + date.toLocaleString('en-US', timestamp_options));
            const request_btn = $("<button>").text("->");
            request_btn.click(function() {
                requests_answer_div.show();
                $("#request_form_input").val(request._id)
            });
            
            requests_div.append(request_div);
            request_div.append(request_sender_div);
            request_div.append(request_type_div);
            request_div.append(request_title_div);
            request_div.append(request_registrationDate_div);
            request_div.append(request_btn);
            
        })
    </script>

</html>