<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Create</title>
        <!--ajax-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <!--CSS-->
        <link rel="stylesheet" href="general_css.css">
        <!--Header-->
        <%- include('../partials/header'); %>
    </head>
    <body>
        <h1>Create</h1>
        <div id="create_menu">
            <button id="warehouse">Αποθήκη</button>
        </div>
        <form action="/create" method="POST" >
            <input type="text" id="create_type" name="create_type">
            <div id = 'warehouse_div'>
                <label for="warehouse_title">Title : </label>
                <input type="text" id="title" name="title">
                <br>
                <label for="warehouse_address">Address : </label>
                <input type="text" id="warehouse_address" name="warehouse_address">
            </div>
            <button id="submit_btn" type="submit">Καταχώρηση</button>
        </form>
        <button id="back_btn">Πίσω</button>
    </body>
    <%- include('../partials/footer'); %>
    <script>
    $(document).ready(function(){
        console.log("/client-profile?id=<%= clientId %>");
        $("#back_btn").click(function(){
            window.location ="/client-profile?id=<%= clientId %>";
        });
        $("#warehouse").click(function(){
            pick_type('warehouse')
        });

        function pick_type(type){
            $("#create_type").val(type)
        }
    });
    
    </script>
</html>