<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Create</title>
        <!--ajax-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <!--CSS-->
        <link rel="stylesheet" href="general_css.css">
        <!--Header-->
        <%- include('../partials/header'); %>
    </head>
    <body>
        <h1>Create</h1>
        <div id="create_menu">
            <button class = "create_menu_btn" id="warehouse">Αποθήκη</button>
            <button class = "create_menu_btn" id="item">Είδος</button>
        </div>
        <form action="/create" method="POST" >
            <input type="text" id="create_type" style="display: none;" name="create_type">
            <div id = 'warehouse_div' class="create_div">
                <label for="warehouse_title">Title : </label>
                <input type="text" id="warehouse_title" name="warehouse_title">
                <br>
                <label for="warehouse_address">Address : </label>
                <input type="text" id="warehouse_address" name="warehouse_address">
            </div>
            <div id = 'item_div' class="create_div">
                <label for="item_title">Title : </label>
                <input type="text" id="item_title" name="item_title" required>
                <br>
                <label for="item_description">Description : </label>
                <br>
                <textarea id = "item_description" name = "item_description" required></textarea>
                <br>
                <label for="item_price_r">Price Retail : </label>
                <input type="number" id="item_price_r" name="item_price_r" required>
                <br>
                <label for="item_price_r_disc">Discount for Retail : </label>
                <input type="number" id="item_price_r_disc" name="item_price_r_disc">
                <br>
                <label for="item_price_w">Price Wholesale : </label>
                <input type="number" id="item_price_w" name="item_price_w">
                <br>
                <label for="item_price_w_disc">Price Wholesale : </label>
                <input type="number" id="item_price_w_disc" name="item_price_w_disc">
            </div>
            <button id="submit_btn" type="submit">Καταχώρηση</button>
        </form>
        <button id="back_btn">Πίσω</button>
    </body>
    <%- include('../partials/footer'); %>
    <script>
    $(document).ready(function(){
        $(".create_div").hide();
        $("#back_btn").click(function(){
            window.location ="/client-profile?id=<%= clientId %>";
        });
        $(".create_menu_btn").click(function(){
            pick_type($(this)); // Pass the clicked element as an argument
        });

        function pick_type(clickedElement){
            var type = clickedElement.attr("id");
            $("#create_type").val(type);
            $(".create_div").hide();
            $("#"+type+"_div").show();
        }
    });
    
    </script>
</html>