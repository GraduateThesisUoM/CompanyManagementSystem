                    <% }else if(type[index] == 9){  %>
                        <%= title %><br>
                        <textarea name="input<%= index %>" id="<%= title %>"><%= data[index] %></textarea>
                    <% }else if(type[index] == 10){  %>
                        <div>
                            <% data[index].forEach(function(node, index) {%>
