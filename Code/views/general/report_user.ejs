<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Form</title>
    <!--ajax-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <!--CSS-->
    <link rel="stylesheet" href="general_css.css" />
    <link rel="stylesheet" href="fonts_css.css">
    <!--Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Asap+Condensed:wght@400;700&display=swap" rel="stylesheet">
    <!--Header-->
    <%- include('../partials/header'); %>
</head>
<body>
    <h1>Report Client</h1>
    <form action="/report" method="POST">
        <h2>Select Reason For Report</h2>
        <input type="text" name="report_reason" id="report_reason" style="display: none;">

        <input type="radio" id="report_user_radio_harassment" name="reason" class="report_reason" value="1">
        <label>Harassment</label><br>
        <input type="radio" id="report_user_radio_pretend" name="reason" class="report_reason" value="2">
        <label>Pretending to be someone</label><br>
        <input type="radio" id="report_user_radio_fraud" name="reason" class="report_reason" value="3">
        <label>Fraud/Scam/Malpractice</label><br>
        <input type="radio" id="report_user_radio_other" name="reason" class="report_reason" value="4">
        <label>Other</label><br>
       
        <% if(user.type == "accountant"){%>
            <h2>Select User To Report</h2>
            <select name="company_users_select" id="company_users_select">
                <option value="no_selection" selected>-- Select a User --</option>
                <%for(var i=0;i < company_users.length;i++){%>
                <option value=<%= company_users[i]._id %>><%= company_users[i].firstName %> <%= company_users[i].lastName %></option>
                <%}%>
            </select>
        <%}%>
        <h2>Describe The Problem</h2>
        <textarea name="report_textarea" id="report_textarea" cols="30" rows="10" required></textarea><br>
        <input type="submit" value="submit">
    </form>
    
</body>
<script>
    $(document).ready(function () {
        $(".report_reason").change(function(event) {
            $("#report_reason").val($(this).val())
        });
    });
</script>
</html>